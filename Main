import java.util.Scanner;
class Main {
  public static void main(String[] args) {
    Scanner myObj = new Scanner(System.in); 
 float x;
 System.out.print("Enter the number");
x = myObj.nextFloat();
if (x>0) {
    System.out.println(x-1);
}
else if (x<0){
    System.out.println(x+1);

}
else {
    System.out.println("0");
}
}
}

